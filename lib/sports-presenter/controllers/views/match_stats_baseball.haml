              %table.standing
                %thead.linescore-header
                  %tr
                    %th.blank
                    %th.inning-1 1
                    %th.inning-2 2
                    %th.inning-3 3
                    %th.inning-4 4
                    %th.inning-5 5
                    %th.inning-6 6
                    %th.inning-7 7
                    %th.inning-8 8
                    %th.inning-9 9
