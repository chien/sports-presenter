%div(data-role="page")
  #bg-tl
    #bg-tr
      #bg-bl
        #bg-br
          .container
            %h1 MLB Box Score
            %h2
              %span.away-team-name 
                Away Team
              vs. 
              %span.home-team-names
                Home Team
            %hr.indent
