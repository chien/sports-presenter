%h1= @standing.league_name
%h2= @standing.stage_name

%hr.indent
%div.graphicarrow
  %div.arrow-up
  %div.arrow-up-a
  %div.arrow-up-b

- @standing.each_group do |group_name, standings|
  %h3= group_name
  %table.standing
    %thead
      %tr
        %th.position
        %th.name(colspan=2)= t "standings.teams"
        %th= t "standings.played_header"
        %th= t "standings.won_header"
        %th= t "standings.drawn_header"
        %th= t "standings.lost_header"
        %th= t "standings.for_header"
        %th= t "standings.against_header"
        %th +/-
        %th= t "standings.points_header"

    %tbody
      - standings.each do |standing|
        %tr
          %td= standing.position
          %td
            - if standing.team_logo
              %img{src: standing.team_logo}
          %td= standing.team_name
          %td= standing.played
          %td= standing.won
          %td= standing.drawn
          %td= standing.lost
          %td= standing.goals_for
          %td= standing.goals_against
          %td= standing.difference
          %td.points= standing.points
